<div class="view-frame animate-view" ng-view></div>

<!-- TOP LEVEL MODALS -->
<div class="modal fade" id="loginModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <form class="form-signin" role="form" ng-init="loginForm = {}">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Sign in to Sessor</h4>
        </div>
        <div class="modal-body">
          <label for="inputEmail" class="sr-only">Email address</label>
          <input type="email" class="form-control" name="email" id="email" ng-model="loginForm.email" required="required">
          <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" class="form-control" name="password" id="password" ng-model="loginForm.password" required="required">
          <div class="checkbox">
            <label>
              <input type="checkbox" value="remember-me" ng-model="loginForm.remember"> Remember me
            </label>
        </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-lg btn-primary btn-block" ng-click="submitLogin(loginForm)" data-dismiss="modal">Sign in</button>
        </div>
      </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->